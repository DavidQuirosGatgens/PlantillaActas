					<xp:this.facets>
						<xp:viewColumnHeader xp:key="header"
							id="viewColumnHeader3" value="Estado" style="font-weight:bold">
						</xp:viewColumnHeader>
					</xp:this.facets>
					<xp:this.showCheckbox><![CDATA[${javascript:!currentDocument.isNewNote() && esEditorDeCampos}]]></xp:this.showCheckbox>
				</xp:viewColumn>
				<xp:viewColumn columnName="$1" id="viewColumn2"
					style="width:600.0px" displayAs="link" openDocAsReadonly="true">

					<xp:viewColumnHeader id="viewColumnHeader2"
						value="Documento" style="font-weight:bold">
					</xp:viewColumnHeader>
				</xp:viewColumn>

