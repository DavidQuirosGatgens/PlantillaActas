								rendered="#{javascript:currentDocument.isEditable()}"
								id="FechaSesionLetrasP"
								style="display: none;color:rgb(255,0,128)">
							</xp:inputText>
						</xp:td>
					</xp:tr>
					<xp:tr>
						<xp:td>
							<xp:label value="Tema:" id="label1"
								for="numerOrden1" style="font-weight:bold">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:text escape="true"
								id="computedField1">
								<xp:this.converter>
									<xp:convertNumber type="number"></xp:convertNumber>
								</xp:this.converter>
								<xp:this.value><![CDATA[#{javascript:var docAsociado:NotesDocument=database.getView("(vTemas_byUNID)").getDocumentByKey(docAcuerdo.getItemValueString("IDdocTema"));
if(docAsociado!=null){
	return docAsociado.getItemValueString("NumeroTema") +" - "+ docAsociado.getItemValueString("Titulo")
}else{
	return "";
}}]]></xp:this.value>
							</xp:text>
						</xp:td>
					</xp:tr>

					<xp:tr>
						<xp:td>
							<xp:label value="Autor:" id="label7"
								for="numerOrden1" style="font-weight:bold">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:text escape="true"
								id="computedField4">
								<xp:this.value><![CDATA[#{javascript:@Name("[ABBREVIATE]",docAcuerdo.getItemValueString("Autor"))}]]></xp:this.value>
							</xp:text>
						</xp:td>
					</xp:tr>

					<xp:tr>
						<xp:td>
							<xp:label value="Número Acuerdo:"
								id="label2" for="numerOrden1" style="font-weight:bold">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:text escape="true" id="computedField2"
								value="#{docAcuerdo.NumeroAcuerdo}">
							</xp:text>
							<xp:br></xp:br>
						</xp:td>
					</xp:tr>
					<xp:tr>
						<xp:td>
							<xp:label value="Tipo de Acuerdo:"
								id="label3" for="descripcion1">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:radioGroup id="radioGroup1"
								defaultValue="Interno" value="#{docAcuerdo.TipoAcuerdo}">
								<xp:selectItem itemLabel="Interno"
									itemValue="Interno">
								</xp:selectItem>
								<xp:selectItem itemLabel="Externo"
									itemValue="Externo">
								</xp:selectItem>
							</xp:radioGroup>
						</xp:td>
					</xp:tr>
					<xp:tr>
						<xp:td>
							<xp:label value="Descripción:"
								id="descripcion_Label1" for="descripcion1">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:inputText
								value="#{docAcuerdo.Descripcion}" id="Descripcion"
								style="width:616.0px">
							</xp:inputText>
						</xp:td>
					</xp:tr>
					<xp:tr>
						<xp:td>
							<xp:label value="Acuerdo:"
								id="acuerdo_Label1" for="acuerdo1">
							</xp:label>
						</xp:td>
						<xp:td>
							<xp:inputText value="#{docAcuerdo.Acuerdo}"
								id="Acuerdo" style="width:618.0px">
							</xp:inputText>
						</xp:td>
					</xp:tr>
					<xp:tr>
						<xp:td>
							<xp:label value="Detalle:"
								id="detalle_Label1" for="detalle1">
							</xp:label>
						</xp:td>
						<xp:td>

							<xp:inputTextarea id="Detalle"
								style="width:619.0px;height:175.0px"
								value="#{docAcuerdo.Detalle}">
							</xp:inputTextarea>
						</xp:td>
					</xp:tr>
				</xp:table>
				<xc:SwAttachmentsAll
					dataSource="#{javascript:currentDocument}" id="SwAttachmentsAll"
					showSwDetach="true" showSwDelete="true" showSwConvertToPDF="true"
					showSwSaveClose="true" showSwAdd="true" showSwClose="true"
					showSwNew="true" showSwEdit="true">
				</xc:SwAttachmentsAll>
				<xp:fileDownload rows="30" id="fileDownload2"
					displayLastModified="false" value="#{docAcuerdo.Body}"
					hideWhen="true">
				</xp:fileDownload>
				<xp:br></xp:br>

				<xp:br></xp:br>
			</xp:td>
		</xp:tr>
	</xp:table>


	<xp:br></xp:br>



	<xp:tabbedPanel id="tabbedPanel1" partialExecute="false"
		partialRefresh="false">
		<xp:tabPanel label="Documentos" id="tabPanel5"
			style="border-radius: 10px;border-style: solid;border-color: rgb(185,222,188);border-width:thin">
			<xp:button value="Crear Seguimiento" id="button3">
				<xp:this.rendered><![CDATA[#{javascript:!currentDocument.isNewNote() && esEditorDeCampos}]]></xp:this.rendered>
				<xp:eventHandler event="onclick" submit="true"
					refreshMode="complete" id="eventHandler1">
					<xp:this.action>
						<xp:createResponse name="/xpSeguimiento.xsp"
							parentId="#{javascript:docAcuerdo.getDocument().getUniversalID()}">
						</xp:createResponse>
					</xp:this.action>
				</xp:eventHandler>
			</xp:button>
			<xp:button value="Crear Comunicado" id="button5">
				<xp:this.rendered><![CDATA[#{javascript:!currentDocument.isNewNote() && esEditorDeCampos}]]></xp:this.rendered>
				<xp:eventHandler event="onclick" submit="true"
					refreshMode="complete" id="eventHandler3">
					<xp:this.action>
						<xp:createResponse name="/xpComunicado.xsp"
							parentId="#{javascript:docAcuerdo.getDocument().getUniversalID()}">
						</xp:createResponse>
					</xp:this.action>
				</xp:eventHandler>
			</xp:button>
			<xp:button value="Eliminar" id="button6">

				<xp:this.rendered><![CDATA[#{javascript:!currentDocument.isNewNote() && esEditorDeCampos}]]></xp:this.rendered>
				<xp:eventHandler event="onclick" submit="true"
					refreshMode="complete">
					<xp:this.action>

						<xp:actionGroup>




							<xp:confirm
								message="Esta Seguro? Se eliminaran el documento seleccionado y todos los documentos asociados.">
							</xp:confirm>







							<xp:executeScript>
								<xp:this.script><![CDATA[#{javascript:var agent = database.getAgent('(EliminaDocsRelacionados)');
var viewPanel=getComponent("viewPanel1");
var docIDArray=viewPanel.getSelectedIds(); 
if (docIDArray.length>0){
	for(i=0;i < docIDArray.length; i++){
		var docId=docIDArray[i];
		var doc:NotesDocument=database.getDocumentByID(docId); 
		if(doc!=null){
			agent.runWithDocumentContext(doc);
			//view.postScript("alert('Se selecciono un documento.')");
		}
	}
}else{
	view.postScript("alert('Debe seleccionar al menos un documento.')");
} }]]></xp:this.script>
							</xp:executeScript>
						</xp:actionGroup>
					</xp:this.action>
				</xp:eventHandler>
			</xp:button>
			<xp:viewPanel rows="30" id="viewPanel1" var="rowHijos">
				<xp:this.facets>
					<xp:pager partialRefresh="true"
						layout="Previous Group Next" xp:key="headerPager" id="pager1">
					</xp:pager>
				</xp:this.facets>
				<xp:this.data>
					<xp:dominoView var="vHijos"
						viewName="vChildrensAcuerdo_ByID">
						<xp:this.categoryFilter><![CDATA[#{javascript:docAcuerdo.getItemValueString("IDAcuerdo")}]]></xp:this.categoryFilter>
					</xp:dominoView>
				</xp:this.data>
				<xp:this.pageName><![CDATA[#{javascript:
try {
	if (rowHijos.isDocument()) {
		if(rowHijos.getDocument().getItemValueString("form")=="Seguimiento"){
			return "/xpSeguimiento.xsp";
		}else{
			return "/xpComunicado.xsp";
		}
	}
} catch (e) {
	return e.toString()
}}]]></xp:this.pageName>
				<xp:viewColumn columnName="IDAcuerdo" id="viewColumn1"
					rendered="false">
					<xp:viewColumnHeader value="ID Tema"
						id="viewColumnHeader1">
					</xp:viewColumnHeader>
				</xp:viewColumn>
				<xp:viewColumn id="viewColumn3" columnName="Estado"
